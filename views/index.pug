extends layout
block content
  div(class="flex justify-center")
    div(id="table-and-form" class="border border-gray-500 w-1/2 p-2")
      h1(class="text-xl mb-4") Todo List
      form(class="mb-4 flex justify-between" hx-post="/create" hx-target="#table-and-form") 
        input(class="border border-gray-500 flex-grow mr-4" type='text' name='todo' value='')
        +button({buttonType:'submit'}) Submit
      div(id="response-div")
        if todos.length === 0 
          p No todos currently.
        else
          ul
            for todo in todos
              +todo(todo.content)