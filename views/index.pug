extends layout
block content
  h1= title
    p Welcome to #{ message }
  .one
  .nested
  h2= subtitle
  button.bg-blue-500.text-white.font-bold.py-2.px-4.rounded click me
  button.bg-red-500.text-white.font-bold.py-2.px-4.rounded(class='hover:bg-blue-700') click me again
  button.text-white.bg-blue-700.font-medium.rounded-lg.text-sm.px-5.me-2.mb-2(
    class='hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800'
  ) default btn
    +list
