extends ../layout
block content
  div(class="flex justify-center")
    div(id="table-and-form" class="border border-gray-500 w-1/2 p-2")
      h1(class="text-xl mb-4") Todo List
      form(class="mb-4 flex justify-between" hx-post="/create-todo" hx-target="#create-response" hx-swap="beforeend") 
        +input({})(id="todo-input" type='text' name='todo' value='')
        +button({buttonType:'submit'}) Submit
      div(id="no-items")  
        if todos.length === 0
          p No items
      ul(id="create-response")
        for todo in todos
          +list-item(todo)
